# ============================================================================
# BITFLOW LMS - BACKEND ENVIRONMENT CONFIGURATION
# ============================================================================
# Laravel 11 Backend API
# Last Updated: October 26, 2025
# ============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_NAME="Bitflow LMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# -----------------------------------------------------------------------------
# APPLICATION MAINTENANCE
# -----------------------------------------------------------------------------
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=bitflow_lms
DB_USERNAME=bitflow_user
DB_PASSWORD=bitflow_secure_password

# For Docker: Use service names
# DB_HOST=postgres

# -----------------------------------------------------------------------------
# CACHE & SESSION
# -----------------------------------------------------------------------------
CACHE_STORE=redis
CACHE_PREFIX=bitflow_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# -----------------------------------------------------------------------------
# QUEUE
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=redis

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_PREFIX=bitflow_

# For Docker: Use service names
# REDIS_HOST=redis
# REDIS_PASSWORD=bitflow_redis_password

# -----------------------------------------------------------------------------
# MAIL
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@bitflow.edu"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# AWS S3 (FILE STORAGE)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=bitflow-lms-uploads
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_URL=

FILESYSTEM_DISK=local
# For production: FILESYSTEM_DISK=s3

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION
# -----------------------------------------------------------------------------
JWT_PRIVATE_KEY_PATH=storage/keys/private.pem
JWT_PUBLIC_KEY_PATH=storage/keys/public.pem
JWT_TTL=900
JWT_REFRESH_TTL=604800
JWT_ALGORITHM=RS256

# -----------------------------------------------------------------------------
# PUSHER/SOKETI (REAL-TIME WEBSOCKETS)
# -----------------------------------------------------------------------------
BROADCAST_CONNECTION=pusher

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# For Soketi (self-hosted):
# PUSHER_HOST=127.0.0.1
# PUSHER_PORT=6001
# PUSHER_SCHEME=http

# -----------------------------------------------------------------------------
# VITE (ASSET BUNDLING)
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# -----------------------------------------------------------------------------
# CORS (CROSS-ORIGIN RESOURCE SHARING)
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3006
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006,http://localhost:3007,http://localhost:3008,http://localhost:3009,http://localhost:3010,http://localhost:3011,http://localhost:3012,http://localhost:3013,http://localhost:3014

# -----------------------------------------------------------------------------
# RATE LIMITING (REQUESTS PER MINUTE)
# -----------------------------------------------------------------------------
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=100

# -----------------------------------------------------------------------------
# SMS PROVIDER (TWILIO)
# -----------------------------------------------------------------------------
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# -----------------------------------------------------------------------------
# PAYMENT GATEWAYS
# -----------------------------------------------------------------------------
# Stripe
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Razorpay
RAZORPAY_KEY=
RAZORPAY_SECRET=

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# -----------------------------------------------------------------------------
# TELESCOPE (LARAVEL DEBUGGING) - DEVELOPMENT ONLY
# -----------------------------------------------------------------------------
TELESCOPE_ENABLED=true
TELESCOPE_WATCHERS_CACHE=true
TELESCOPE_WATCHERS_COMMANDS=true
TELESCOPE_WATCHERS_DUMPS=true

# -----------------------------------------------------------------------------
# SCOUT (FULL-TEXT SEARCH)
# -----------------------------------------------------------------------------
SCOUT_DRIVER=database
# For production: SCOUT_DRIVER=meilisearch or algolia

MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

ALGOLIA_APP_ID=
ALGOLIA_SECRET=

# -----------------------------------------------------------------------------
# BACKUP
# -----------------------------------------------------------------------------
BACKUP_DRIVER=s3
BACKUP_DISK=backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_WEBSOCKETS=true
FEATURE_FILE_UPLOADS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_PAYMENT_GATEWAY=false
FEATURE_TWO_FACTOR_AUTH=true

# -----------------------------------------------------------------------------
# DEVELOPMENT & DEBUGGING
# -----------------------------------------------------------------------------
DEBUGBAR_ENABLED=true
QUERY_DETECTOR_ENABLED=true
