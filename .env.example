# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://bitflow:bitflow_dev_password@localhost:5432/bitflow_master

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=bitflow_redis_password

# ============================================
# JWT SECRETS (Generate strong secrets in production!)
# ============================================
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_characters_long
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_change_in_production_min_32_chars

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# ============================================
# CORS ORIGINS (comma-separated)
# ============================================
CORS_ORIGINS=http://localhost:3002,http://localhost:19006

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug

# ============================================
# EMAIL (Development - use Mailhog)
# ============================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# ============================================
# FILE STORAGE (AWS S3)
# ============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=bitflow-uploads

