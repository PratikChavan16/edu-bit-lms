# =============================================================================
# BITFLOW LMS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update values for your local environment
# Last Updated: October 26, 2025

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=bitflow_lms
DB_USERNAME=bitflow_user
DB_PASSWORD=bitflow_secure_password

# For Docker: Use service names
# DB_HOST=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=bitflow_redis_password
REDIS_PORT=6379

# For Docker: Use service names
# REDIS_HOST=redis

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_URL=http://localhost:8000
BACKEND_API_URL=http://localhost:8000/api

# =============================================================================
# FRONTEND URLS (14 Portals)
# =============================================================================
FRONTEND_BITFLOW_ADMIN_URL=http://localhost:3001
FRONTEND_UNIVERSITY_OWNER_URL=http://localhost:3002
FRONTEND_SUPER_ADMIN_URL=http://localhost:3003
FRONTEND_PRINCIPAL_URL=http://localhost:3004
FRONTEND_COLLEGE_ADMIN_URL=http://localhost:3005
FRONTEND_SUPER_ACADEMICS_URL=http://localhost:3006
FRONTEND_FACULTY_TEACHER_URL=http://localhost:3007
FRONTEND_STUDENT_URL=http://localhost:3008
FRONTEND_PARENT_URL=http://localhost:3009
FRONTEND_ADMISSION_ADMIN_URL=http://localhost:3010
FRONTEND_SUPER_ACCOUNTANT_URL=http://localhost:3011
FRONTEND_COLLEGE_ACCOUNTS_ADMIN_URL=http://localhost:3012
FRONTEND_COLLEGE_FEE_ADMIN_URL=http://localhost:3013
FRONTEND_SUPER_NT_MANAGER_URL=http://localhost:3014

# =============================================================================
# JWT KEYS (Generated via OpenSSL)
# =============================================================================
JWT_PRIVATE_KEY_PATH=storage/keys/private.pem
JWT_PUBLIC_KEY_PATH=storage/keys/public.pem
JWT_TTL=900
JWT_REFRESH_TTL=604800

# =============================================================================
# AWS S3 CONFIGURATION (File Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=bitflow-lms-uploads
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@bitflow.edu
MAIL_FROM_NAME="Bitflow LMS"

# =============================================================================
# SMS CONFIGURATION (Twilio)
# =============================================================================
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
STRIPE_KEY=
STRIPE_SECRET=
RAZORPAY_KEY=
RAZORPAY_SECRET=

# =============================================================================
# PUSHER/SOKETI (Real-time WebSockets)
# =============================================================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# SECURITY
# =============================================================================
APP_KEY=
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006,http://localhost:3007,http://localhost:3008,http://localhost:3009,http://localhost:3010,http://localhost:3011,http://localhost:3012,http://localhost:3013,http://localhost:3014

# Rate Limiting (requests per minute)
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=100
